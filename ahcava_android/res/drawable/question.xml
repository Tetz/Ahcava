<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
	    
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<stroke android:width="1dp" android:color="#cccccc" />
			<corners android:radius="10dp" />
			<gradient android:angle="270" 
				android:centerX="0.5" android:centerY="0.5" android:endColor="#ff5555"
				android:startColor="#ff5555" android:type="linear" />
		</shape>
	
	</item>
	<item android:state_pressed="false">
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<stroke android:width="1dp" android:color="#cccccc" />
			<corners android:radius="10dp" />
			<gradient android:angle="270" android:centerColor="#ff5555"
				android:centerX="0.5" android:centerY="0.5" android:endColor="#ff8080"
				android:startColor="#ff8080" android:type="linear" />
		</shape>
	</item>

</selector>

